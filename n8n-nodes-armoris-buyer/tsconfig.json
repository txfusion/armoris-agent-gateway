{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2020",
            "dom"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": false,
        "strict": true,
        "skipLibCheck": true,
        "target": "es2020"
    },
    "include": [
        "credentials/**/*.ts",
        "nodes/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "gulpfile.js"
    ]
}